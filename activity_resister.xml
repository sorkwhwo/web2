<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResisterActivity">

    <EditText
        android:id="@+id/et_ID"
        android:layout_width="366dp"
        android:layout_height="50dp"

        android:background="@drawable/border"
        android:ems="10"
        android:layout_marginBottom="10dp"
        android:paddingStart="10dp"
        android:hint="아이디를 입력해주세요."
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toTopOf="@+id/tv_pwd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_ID" />

    <EditText
        android:id="@+id/et_age"
        android:layout_width="366dp"
        android:layout_marginBottom="10dp"
        android:paddingStart="10dp"
        android:layout_height="50dp"

        android:background="@drawable/border"
        android:ems="10"
        android:hint="나이를 입력해주세요."
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/tv_ID"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_age" />

    <EditText
        android:layout_marginBottom="10dp"
        android:paddingStart="10dp"
        android:id="@+id/et_name"
        android:layout_width="366dp"
        android:layout_height="50dp"
        android:background="@drawable/border"
        android:ems="10"
        android:hint="이름을 입력해주세요."
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/tv_age"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_name" />

    <EditText
        android:id="@+id/et_Pwd"
        android:layout_width="366dp"
        android:layout_height="50dp"

        android:background="@drawable/border"
        android:ems="10"
        android:paddingStart="10dp"
        android:layout_marginBottom="10dp"
        android:hint="비밀번호를 입력해주세요."
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/tv_pwd_correct"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_pwd" />

    <EditText
        android:id="@+id/et_Pwd_Check"
        android:layout_width="366dp"
        android:layout_height="50dp"
        android:layout_marginBottom="300dp"

        android:background="@drawable/border"
        android:ems="10"
        android:hint="비밀번호를 한번 더 입력해주세요."
        android:inputType="textPassword"
        android:paddingStart="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_pwd_correct" />

    <Button
        android:id="@+id/button_ok"
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="-30dp"
        android:background="@drawable/profile_oval"
        android:text="OK"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:fontFamily="@font/esamanrulight"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_cancel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_Pwd_Check" />

    <Button
        android:id="@+id/button_cancel"
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:layout_marginStart="180dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="-30dp"
        android:background="@drawable/profile_oval"
        android:text="CANCEL"
        android:fontFamily="@font/esamanrulight"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_Pwd_Check" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="110dp"
        android:layout_height="27dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="260dp"
        android:background="@null"
        android:fontFamily="@font/esamanrulight"
        android:text="Name"
        android:textSize='16dp'
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/et_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_reg_top" />

    <TextView
        android:id="@+id/tv_age"
        android:layout_width="110dp"
        android:layout_height="27dp"
        android:layout_marginEnd="260dp"
        android:background="@null"
        android:text="Age"
        android:fontFamily="@font/esamanrulight"
        android:textSize='16dp'
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/et_age"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_name" />

    <TextView
        android:id="@+id/tv_ID"
        android:layout_width="110dp"
        android:layout_height="27dp"
        android:layout_marginEnd="260dp"
        android:background="@null"
        android:text="ID"
        android:fontFamily="@font/esamanrulight"
        android:textSize='16dp'
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/et_ID"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_age" />

    <TextView
        android:id="@+id/tv_pwd"
        android:layout_width="110dp"
        android:layout_height="27dp"
        android:layout_marginEnd="260dp"
        android:background="@null"
        android:text="Password"
        android:fontFamily="@font/esamanrulight"
        android:textSize='16dp'
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/et_Pwd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_ID" />

    <TextView
        android:id="@+id/tv_pwd_correct"
        android:layout_width="110dp"
        android:layout_height="27dp"
        android:layout_marginEnd="260dp"
        android:background="@null"
        android:fontFamily="@font/esamanrulight"
        android:text="Password"
        android:textSize='16dp'
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/et_Pwd_Check"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_Pwd" />

    <TextView

        android:id="@+id/tv_reg_top"
        android:layout_width="246dp"
        android:layout_height="48dp"

        android:layout_marginTop="90dp"
        android:layout_marginEnd="142dp"

        android:text="Register"
        android:textSize='30dp'
        android:fontFamily="@font/esamanrulight"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/tv_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>